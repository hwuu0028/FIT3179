  "transform": [
    {"filter": "State_selection == null || datum.StateNames == State_selection"}
  ],
  "selection": {
    "state_highlight": {
      "type": "single",
      "fields": ["StateNames"],
      "bind": "legend"
    },
    "type_highlight": {"type": "single", "fields": ["Type"], "bind": "legend"}
  },
  "data": {
    "url": "https://raw.githubusercontent.com/hwuu0028/FIT3179/main/hospital_beds_USA_v1.csv"
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "AveBeds",
      "type": "quantitative",
      "title": "Number of Beds per 1000 Inhabitants",
      "axis": {"tickCount": 10},
      "scale": {"domain": [0, 12]}
    },
    "y": {"field": "Population", "type": "quantitative", "title": "Population"},
    "opacity": {
      "condition": {"selection": "type_highlight", "value": 0.9},
      "value": 0.2
    },
    "color": {"field": "Type"},
    "tooltip": [
      {"field": "StateNames", "type": "nominal", "title": "State"},
      {"field": "Year", "type": "quantitative"},
      {
        "field": "AveBeds",
        "type": "quantitative",
        "title": "Average Beds per 1000",
        "format": ".2f"
      },
      {"field": "Population", "type": "quantitative", "format": ","}
    ]
  }
